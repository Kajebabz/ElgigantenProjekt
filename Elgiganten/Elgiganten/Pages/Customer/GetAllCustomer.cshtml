@page 
@model Elgiganten.Pages.Customer.GetAllCustomerModel
@{
}
<h1>Customers</h1>

<div class="row">
    <div class="col-4"><h5>Search Name</h5></div>
    <div class="col-4"></div>
</div>

<div class="row">
    <div class="col-4">
        <form method="post" class="form-inline">
            <div class="input-group mb-3">
                <input asp-for="SearchString" class="form-control mr-1" placeholder="Enter search term" />
                <input type="submit" asp-page-handler="NameSearch" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-2"></div>
</div>

<table class="table table-bordered table-hover table-opacity" width="50%">
    <colgroup>
        <col style="width : 2%">
        <col style="width : 18%">
        <col style="width : 32%">
        <col style="width : 15%">
        <col style="width : 24%">
        <col style="width : 9%">
        <col style="width : 9%">
    </colgroup>
    <thead>
        <tr class="btn-secondary active">
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Address
            </th>
            <th>
                PhoneNR
            </th>
            <th>
                Email
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if (@Model._customers != null)
        {
            foreach (var customer in Model._customers)
            {
                <tr class="btn-secondary">
                    <td>
                        @customer.Id
                    </td>
                    <td>
                        @customer.Name
                    </td>
                    <td>
                        @customer.Address
                    </td>
                    <td>
                        @customer.PhoneNr
                    </td>
                    <td>
                        @customer.Email
                    </td>
                        
                    <td>
                        <a class="btn btn-primary btn-sm" type="button" title="Edit" asp-page="EditCustomer" asp-route-id="@customer.Id"><i class="fa fa-edit"></i></a>
                        <a class="btn btn-danger btn-sm " type="button" title="Delete" asp-page="DeleteCustomer" asp-route-id="@customer.Id"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<p>
    <a class="btn btn-primary" asp-page="CreateCustomer"> Create a new Customer </a>
</p>