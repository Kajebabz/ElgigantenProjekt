@page
@model Elgiganten.Pages.Ordre.GetAllOrdresModel
@{
}
<h1>Ordres</h1>

<div class="row">
    <div class="col-4"><h5>Search Id</h5></div>
    <div class="col-4"><h5>Search OrdreDate</h5></div>
    <div class="col-4"><h5>Search Quantity</h5></div>
    <div class="col-4"></div>
</div>


        <div class="col-2"></div>
    </div>

    <table class="table table-bordered table-hover table-opacity" width="50%">
        <colgroup>
            <col style="width : 4%">
            <col style="width : 10%">
            <col style="width : 15%">
            <col style="width : 10%">
            <col style="width : 41%">
            <col style="width : 8%">
            <col style="width : 8%">
        </colgroup>
        <thead>
            <tr class="btn-secondary active">
                <th>
                    Id
                </th>
                <th>
                    OrdreDate
                </th>
                <th>
                    Quantinty
                </th>
                <th>
                    Item
                </th>
                <th>
                    Customer
                </th>
                <th>
                    TotalPrice
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Ordres != null)
            {
                foreach (var Ordre in Model.Ordres)
                {
                   <tr>
                       <td>
                           @Ordre.Id
                       </td>
                       <td>
                           @Ordre.Quantity
                       </td>
                       <td>
                           @Ordre.OrdreDate
                       </td>
                   </tr>
                }
            }
        </tbody>
    </table>

    <p>
        <a class="btn btn-primary" asp-page="CreateItem"> Create a new Item </a>
    </p>
